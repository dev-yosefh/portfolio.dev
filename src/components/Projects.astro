---
import Laravel from "./icons/Laravel.astro";
import React from "./icons/React.astro";
import Inertia from "./icons/Inertia.astro";
import Tailwind from "./icons/Tailwind.astro";
import MySQL from "./icons/Mysql.astro";

const TAGS = {
  LARAVEL: {
    name: "Laravel",
    icon: Laravel,
  },
  REACT: {
    name: "React JS",
    icon: React,
  },
  INERTIA: {
    name: "Inertia JS",
    icon: Inertia,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    icon: Tailwind,
  },
  MYSQL: {
    name: "MySQL",
    icon: MySQL,
  },
};
const PROJECTS = [
  {
    title: "Sistema Integral de Informacion (SII) ",
    description:
      "Sistema para el uso del Personal, Alumnos y Docentes del Tecnoógico Nacional de México Campus Tepic",
    link: "sii.tepic.tecnm.mx",
    github: "https://via.placeholder.com/150",
    image: "/projects/SII_SEC_HORARIOS.webp",
    tags: [TAGS.LARAVEL, TAGS.REACT, TAGS.INERTIA, TAGS.TAILWIND, TAGS.MYSQL],
  },
];
---

{
  PROJECTS.map((project) => (
    <article>
      <h3 class="text-lg font-semibold text-purple-300/90 dark:text-black/80">
        {project.title}
      </h3>
      <p class="mb-4 text-base font-normal text-white/75 dark:text-gray-400 text-pretty">
        {project.description}
      </p>
      <ul class="flex gap-x-4  flex-wrap">
        {project.tags.map((tag) => (
          <li>
            <span
              class={`border border-white/10 bg-white/10  flex justify-center items-center gap-x-2 rounded-full text-sm py-1 px-2 mb-5`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded-lg shadow-2xl shadow-white/10"
        src={project.image}
        alt={`Captura de pantalla del proyecto ${project.image}`}
      />
    </article>
  ))
}
